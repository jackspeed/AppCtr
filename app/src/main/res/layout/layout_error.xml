<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_title_error_click_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/btn_click_refresh"
        android:clickable="true"
        android:maxLines="1"
        android:padding="@dimen/dp_5"
        android:text="点击刷新"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_16"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_title_no_data_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:maxLines="2"
        android:text="很遗憾，页面加载失败"
        android:textColor="@color/color_edit_input"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:id="@+id/layout_no_data_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:visibility="visible">


        <TextView
            android:id="@+id/tv_no_data_tips_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/test_network"
            android:textColor="@color/slave_text_gray"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_no_data_tips_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_no_data_tips_a"
            android:layout_below="@id/tv_no_data_tips_a"
            android:layout_marginTop="@dimen/dp_8"
            android:maxLines="2"
            android:text="@string/exit_and_restart"
            android:textColor="@color/slave_text_gray"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

</LinearLayout>